{
	"manifest_version": 2,
	"name": "Buddy",
	"version_name": "Capricorn",
	"description": "Ease the stuff that you do on Salesforce everyday",
	"version": "2.7.8",
	"browser_action": {
		"default_icon": "tt.png",
		"default_popup": "tt.html",
		"default_title": "TagTeam"
	},
	"icons": {
		"16": "tt.png",
		"48": "tt.png",
		"128": "tt.png"
	},
	"background": {
		"scripts": [
			"background.js",
			"js/jquery/jquery.min.js"
		],
		"persistent": false
		},
	"key":"",
	"content_scripts": [{
		"matches": ["*://*.smbsalesimplementation.my.salesforce.com/*"],
        "css": [
			"css/bootstrap.css",
			"css/fontawesome.css",
			"fix.css",
			"css/swal.css",
			"css/jquery.gritter.css"
		],
		"js": [
			"js/jquery/jquery.min.js",
			"js/sweetalert2.all.js",
			"js/popper.min.js",
			"js/jquery.cookie.js",
			"tt.js",
			"js/platform.js",
			"js/jquery.gritter.min.js",
			"js/bootstrap.js",
			"js/oauth2.js"
			
		],
		"page": ["background.html"],
		"all_frames": true,
		"run_at": "document_idle"
	}],
	"oauth2":{
		"client_id": "566139704978-pjr2cif92qd93clhlvr836oehrjhaedn.apps.googleusercontent.com",
		"scopes":[
			"https://www.googleapis.com/auth/contacts.readonly"
		]
	},
	"permissions": [
		"activeTab",
		"tabs",
		"alarms",
		"clipboardRead",
		"clipboardWrite",
		"cookies",
		"contextMenus",
		"identity",
		"https://accounts.google.com/o/oauth2/token",
		"https://google-wfm.regalix.com/salesforcetool/fetchMessage.php",
		"https://usher.regalix.com/extension"
	], 
	"content_security_policy": "script-src 'self' https://www.google-analytics.com/analytics.js; object-src 'self'"

}

